<Window x:Class="MaterialsCreate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- 第一行标题 -->
        <ui:TextBlock Grid.Row="0" Margin="10" FontTypography="TitleLarge" Text="材质批量生成器" HorizontalAlignment="Center"
                      VerticalAlignment="Center" FontWeight="Bold" Height="52" Width="282">
            <ui:TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF9FE4FF" Offset="1" />
                    <GradientStop Color="#FF00B8FF" Offset="0" />
                </LinearGradientBrush>
            </ui:TextBlock.Foreground>
        </ui:TextBlock>
        
        <!-- 第一行操作区 -->
        <ui:CardControl Grid.Row="1" Margin="10">
            <ui:CardControl.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox
                            HorizontalAlignment="Left"
                            SelectedIndex="0">
                            <ComboBoxItem Content="请选择游戏" DataContext="" />
                            <ComboBoxItem Content="CS2" IsSelected="True" />
                            <ComboBoxItem Content="Sbox" />
                            <ComboBoxItem Content="" />
                        </ComboBox>
                        <ComboBox
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            SelectedIndex="0">
                            <ComboBoxItem Content="请选择Shader" DataContext="" />
                            <ComboBoxItem Content="Complex" IsSelected="True" />
                            <ComboBoxItem Content="Unlit" />
                            <ComboBoxItem Content="" />
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" FontSize="15">SSR</TextBlock>
                        <CheckBox />
                        <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" FontSize="15"></TextBlock>
                        <ui:ToggleSwitch/>
                    </StackPanel>
                    
                    <ui:Button Grid.Column="2"
                               Background="#FF409EFF"
                               Content="检查文件"
                               MouseOverBackground="#66b1ff"
                               Margin="10,0,0,0"
                               Foreground="#E4FFFFFF"/>
                    <ui:Button Grid.Column="3"
                               Background="#67C23A"
                               Content="创建材质"
                               MouseOverBackground="#A8E063"
                               Margin="10,0,0,0"
                               Foreground="#E4FFFFFF"
                               Click="CreateVmat" />
                    <ui:Button
                        Grid.Column="4"
                        Background="#E6A23C"
                        Content="清理目录"
                        MouseOverBackground="#ffbc58"
                        Margin="10,0,10,0" Foreground="#E4FFFFFF"/>
                    <ui:SymbolIcon MouseDown="OpenSetting" Grid.Column="5" Symbol="Settings48" FontSize="24" Margin="10,0,0,0"></ui:SymbolIcon>
                </Grid>
            </ui:CardControl.Header>
        </ui:CardControl>
        <!-- 第三行日志 -->
        <ui:CardControl Grid.Row="2" Margin="10">
            <ui:CardControl.Header>
                <StackPanel Grid.Row="1" MinHeight="300" MinWidth="700">
                    <RichTextBox x:Name="log_text" Background="GhostWhite" MinHeight="300" MinWidth="700" IsReadOnly="True">
                        <FlowDocument>
                            <Paragraph LineHeight="5" FontFamily="Microsoft YaHei" FontSize="12" />
                        </FlowDocument>
                    </RichTextBox>
                    <Canvas>
                        <ui:SymbolIcon MouseDown="ClearLog" Symbol="Clipboard32" Canvas.Right="20"
                                       Canvas.Bottom="20" />
                    </Canvas>
                    
                </StackPanel>
            </ui:CardControl.Header>
        </ui:CardControl>
        <!-- 第四行提示幅 -->
        <StackPanel Grid.Row="3" Width="800" HorizontalAlignment="Right">
            <ui:SnackbarPresenter x:Name="SnackbarPresenter" x:FieldModifier="public" />
            <ContentPresenter x:Name="RootContentDialog" x:FieldModifier="public" />
        </StackPanel>

    </Grid>
</Window>