<Window x:Class="MaterialsCreate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- 第一行标题 -->
        <ui:TextBlock Grid.Row="0" Margin="10" FontTypography="TitleLarge" Text="材质批量生成器" HorizontalAlignment="Center"
                      VerticalAlignment="Center" FontWeight="Bold" Height="52" Width="282">
            <ui:TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF9FE4FF" Offset="1" />
                    <GradientStop Color="#FF00B8FF" Offset="0" />
                </LinearGradientBrush>
            </ui:TextBlock.Foreground>
        </ui:TextBlock>
        <!-- 第二行操作区 -->
        <Border Grid.Row="1" BorderBrush="#FFF6F6F6" BorderThickness="2" CornerRadius="5,5,5,5" Margin="10"
                Background="#FFFEFEFE">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <ui:TextBlock Text="选择游戏：" VerticalAlignment="Center" Margin="0,0,10,0" />
                    <ComboBox
                        x:Name="GameComboBox"
                        SelectionChanged="GameComboBox_SelectionChanged"
                        HorizontalAlignment="Left"
                        SelectedIndex="0">
                    </ComboBox>
                    <ui:TextBlock Text="选择Shader：" VerticalAlignment="Center" Margin="10,0,0,0" />
                    <ComboBox
                        x:Name="ShaderComboBox"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        SelectedIndex="0">
                    </ComboBox>
                    
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">

                </StackPanel>

                <ui:Button Grid.Column="2"
                           Background="#FF409EFF"
                           Click="CreateVmat"
                           Content="创建材质"
                           MouseOverBackground="#66b1ff"
                           Margin="10,0,0,0"
                           Foreground="#E4FFFFFF" />
                <ui:Button Grid.Column="3"
                           Background="#67C23A"
                           Content="打开目录"
                           Click="OpenDir"
                           MouseOverBackground="#A8E063"
                           Margin="10,0,0,0"
                           Foreground="#E4FFFFFF" />
                <ui:Button
                    Grid.Column="4"
                    Click="ClearDir"
                    Background="#E6A23C"
                    Content="清理目录"
                    MouseOverBackground="#ffbc58"
                    Margin="10,0,10,0" Foreground="#E4FFFFFF" />
                <ui:SymbolIcon MouseDown="OpenSetting" Grid.Column="5" Symbol="Settings48" FontSize="24"
                               Margin="10,0,0,0">
                </ui:SymbolIcon>
            </Grid>
        </Border>
        <!-- 第三行日志 -->
        <Border Grid.Row="2" BorderBrush="#FFF6F6F6" BorderThickness="2" CornerRadius="5,5,5,5" Margin="10"
                Background="#FFFEFEFE">
            <Grid Margin="10">
                <RichTextBox x:Name="log_text"
                             Background="FloralWhite"
                             VerticalAlignment="Stretch"
                             HorizontalAlignment="Stretch"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto">
                    <FlowDocument>
                        <Paragraph LineHeight="5" FontFamily="Microsoft YaHei" FontSize="12" />
                    </FlowDocument>
                </RichTextBox>
                <!-- 图标用 Canvas 绝对定位 -->
                <Canvas>
                    <ui:SnackbarPresenter x:Name="SnackbarPresenter" x:FieldModifier="public" Canvas.Right="5"
                                          Canvas.Top="5" />
                    <ContentPresenter x:Name="RootContentDialog" x:FieldModifier="public" Canvas.Right="5"
                                      Canvas.Top="5" />
                </Canvas>
                <Canvas>
                    <ui:SymbolIcon MouseDown="ClearLog" Symbol="Clipboard32"
                                   Canvas.Right="20" Canvas.Bottom="20" />
                </Canvas>
            </Grid>
        </Border>
        <!-- 第四行提示幅 -->
        <Grid Grid.Row="3" Margin="10" >
            <CheckBox Content="启用SSR" IsEnabled="{Binding SSR}" ToolTip="开启后将启用屏幕空间反射（SSR）效果"/>
        </Grid>
    </Grid>
</Window>