<Window x:Class="MaterialsCreate.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Setting" Height="600" Width="800">
    <Grid>
        <Border BorderBrush="#FFF6F6F6" BorderThickness="5" CornerRadius="10,10,10,10" Margin="20"
                Background="#FFFEFEFE">
            <TabControl Margin="20">
                <TabItem IsSelected="True">
                    <TabItem.Header>
                        <TextBlock Text="材质匹配配置" />
                    </TabItem.Header>
                    <ui:CardControl Margin="10" VerticalAlignment="Top">
                        <ui:CardControl.Header>
                            <StackPanel VerticalAlignment="Top">
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="漫反射贴图" Width="90" VerticalAlignment="Center" />
                                    <TextBox Text="{Binding BaseColor, UpdateSourceTrigger=LostFocus}"
                                             Width="550" Height="35" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="法线贴图" Width="90" VerticalAlignment="Center" />
                                    <TextBox Text="{Binding Normal, UpdateSourceTrigger=LostFocus}" 
                                             Width="550" Height="35" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="粗糙度贴图" Width="90" VerticalAlignment="Center" />
                                    <TextBox Text="{Binding Roughness, UpdateSourceTrigger=LostFocus}"
                                             Width="550" Height="35" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="AO贴图" Width="90" VerticalAlignment="Center" />
                                    <TextBox Text="{Binding AO, UpdateSourceTrigger=LostFocus}"
                                             Width="550" Height="35" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="金属度贴图" Width="90" VerticalAlignment="Center" />
                                    <TextBox Text="{Binding Metal, UpdateSourceTrigger=LostFocus}"
                                             Width="550" Height="35" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="自发光贴图" Width="90" VerticalAlignment="Center" />
                                    <TextBox Text="{Binding SelfIllum, UpdateSourceTrigger=LostFocus}"
                                             Width="550" Height="35" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="透明度贴图" Width="90" VerticalAlignment="Center" />
                                    <TextBox Text="{Binding Opacity, UpdateSourceTrigger=LostFocus}" 
                                             Width="550" Height="35" />
                                </StackPanel>
                                <ui:Button HorizontalAlignment="Center"
                                           Background="#FF409EFF"
                                           Click="OnSaveClicked" 
                                           Content="保存配置"
                                           Width="100"
                                           Height="40"
                                           MouseOverBackground="#66b1ff"
                                           Margin="0,20,0,0"
                                           Foreground="#E4FFFFFF" />
                            </StackPanel>
                        </ui:CardControl.Header>
                    </ui:CardControl>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</Window>